<Window x:Class="VisionCore.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="480" Width="380"
        Background="#1E1E1E" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="HeaderLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LimeGreen"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="2,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="12" Background="#1E1E1E" ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#252525" MouseLeftButtonDown="TitleBar_MouseDown">
                <DockPanel Margin="20,0">
                    <TextBlock Text="CONFIGURATION" Foreground="#AAAAAA" VerticalAlignment="Center"
                               FontWeight="Bold" FontSize="11"/>
                    <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" Foreground="#666666" BorderThickness="0" Cursor="Hand"
                            Click="Close_Click" FontSize="18" Width="30"/>
                </DockPanel>
            </Border>

            <ScrollViewer Grid.Row="1" Margin="25,25,25,0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="NETWORK SETTINGS" Style="{StaticResource HeaderLabel}"/>

                    <TextBlock Text="IP ADDRESS" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding Settings.IP}"/>

                    <TextBlock Text="PORT NUMBER" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding Settings.Port}"/>

                    <Rectangle Height="1" Fill="#333333" Margin="0,5,0,25"/>

                    <TextBlock Text="AUTHENTICATION" Style="{StaticResource HeaderLabel}"/>

                    <TextBlock Text="ADMIN USER" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding Settings.User}"/>

                    <TextBlock Text="PASSWORD" Style="{StaticResource InputLabel}"/>
                    <TextBox Text="{Binding Settings.Password}"/>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Background="#252525">
                <Button Content="SAVE SETTINGS" Command="{Binding SaveCommand}"
                        Width="220" Height="36" Background="#3D3D3D" Foreground="White"
                        FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="18">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>