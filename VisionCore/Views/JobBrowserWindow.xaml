<Window x:Class="VisionCore.Views.JobBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open Job" Height="500" Width="850"
        Background="#F3F3F3" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterOwner">

    <Border BorderBrush="#AAAAAA" BorderThickness="1" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#F3F3F3" MouseLeftButtonDown="TitleBar_MouseDown">
                <TextBlock Text="Job 열기" VerticalAlignment="Center" Margin="15,0" FontSize="12"/>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="📁" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox Text="{Binding CurrentDisplayPath}" Width="600" Height="25" VerticalContentAlignment="Center" IsReadOnly="True" Background="White"/>
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="1"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Background="#F0F0F0">
                    <TextBlock Text="바로 가기" Margin="10,10,0,5" Foreground="#666666" FontSize="11"/>

                    <ListBox SelectedIndex="{Binding SelectedLocationIndex}" BorderThickness="0" Background="Transparent">
                        <ListBoxItem Padding="15,8" Content="💻 이 내 PC"/>
                        <ListBoxItem Padding="15,8" Content="📷 비전 센서 (In-Sight)"/>
                    </ListBox>
                </StackPanel>

                <ListView Grid.Column="2" ItemsSource="{Binding Files}" SelectedItem="{Binding SelectedFile}"
                          BorderThickness="0" Background="White" Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="이름" DisplayMemberBinding="{Binding Name}" Width="350"/>
                            <GridViewColumn Header="날짜" DisplayMemberBinding="{Binding Date}" Width="150"/>
                            <GridViewColumn Header="크기" DisplayMemberBinding="{Binding Size}" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <Border Grid.Row="3" Background="#F3F3F3" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
                <Grid Margin="20,0">
                    <StackPanel VerticalAlignment="Center">
                        <DockPanel Margin="0,5">
                            <TextBlock Text="파일 이름(N): " VerticalAlignment="Center" Width="80"/>
                            <TextBox Text="{Binding SelectedFile.Name}" Height="22" VerticalContentAlignment="Center"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="파일 형식(T): " VerticalAlignment="Center" Width="80"/>
                            <ComboBox SelectedIndex="0" Height="22">
                                <ComboBoxItem Content="In-Sight Job Files (*.job)"/>
                            </ComboBox>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="열기(O)" Command="{Binding OpenCommand}" Width="85" Height="26" Margin="5"/>
                        <Button Content="취소" Click="Close_Click" Width="85" Height="26" Margin="5"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>